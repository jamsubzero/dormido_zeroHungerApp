<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MapFragment">

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <ListView
                android:id="@+id/mealList"
                android:layout_width="390dp"
                android:layout_height="483dp"
                android:layout_above="@+id/forecastSupply2"
                android:layout_below="@+id/forecastSupply"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="13dp"
                android:layout_marginBottom="16dp" />

        <Spinner
                android:id="@+id/filCrop2"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/filYear3"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="11dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="6dp"
                android:entries="@array/food_type" />

        <Spinner
                android:id="@+id/filYear3"
                android:layout_width="match_parent"
                android:layout_height="39dp"
                android:layout_alignParentTop="true"
                android:layout_marginStart="9dp"
                android:layout_marginTop="11dp"
                android:layout_marginEnd="9dp"
                android:entries="@array/year" />

        <Button
                android:id="@+id/forecastSupply"
                android:layout_width="395dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/filCrop2"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="9dp"
                android:layout_marginTop="13dp"
                android:layout_marginEnd="7dp"
                android:text="Generate One-year Forecast" />

        <Button
                android:id="@+id/forecastSupply2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="12dp"
                android:text="Compare with Actual Data" />


    </RelativeLayout>
</FrameLayout>
